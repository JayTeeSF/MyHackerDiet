
<div align="left">
  <h1>Welcome Back!</h1>
  It has been <%= "#{@last_weighin_days} day".pluralize %> since your last weigh-in.

  <center>
          <center>
            <% if @current_diff == nil || @current_diff == 0 %>
              <i>Not enough data for trending</i>
            <% elsif @current_diff < 0 %>
              <font style="color: green;">
                <h5><%= @current_weight.avg_weight %></h5>
                <strong><%= @current_diff %></strong> 7-day decrease
              </font>
            <% else %>
              <font style="color: red;">
                <h5><%= @current_weight.avg_weight %></h5>
                <strong><%= @current_diff %></strong> 7-day increase
              </font>
            <% end %>
          </center>

          <br /><br /><br />

          <center>
            <% if @steps_7_days == nil or @steps_7_days == 0 %>
              <i>Not enough data for trending</i>
            <% else %>
              <% if @steps_7_days >= 10000 %>
                <font style="color: green;"><h5><%= @steps_7_days.round(2) %></h5></font>
              <% elsif @steps_7_days >= 5000 %>
                <font style="color: yellow;"><h5><%= @steps_7_days.round(2) %></h5></font>
              <% else %>
                <font style="color: red;"><h5><%= @steps_7_days.round(2) %></h5></font>
              <% end %>
              10,000 par
            <% end %>
          </center>
          <% if @steps_months == nil || @steps_months.size == 0 %>
            <i>Not enough data for trending</i>
          <% else %>

          <table class='pricing-table'>
            <tr>
              <th>Year</th>
              <th>Month</th>
              <th>Total Steps</th>
              <th>Total Mod Steps</th>
              <th>Total Mod Min</th>
            </tr>
          <% @steps_months.each do |step| %>
            <tr align="right">
              <td><%= step['year'] %></td>
              <td><%= step['month'] %></td>
              <td><%= step['steps'] %></td>
              <td><%= step['mod_steps'] %></td>
              <td><%= step['mod_min'] %></td>
            </tr>
          <% end %>
        </table>
        <% end %>
</center>

</div>
