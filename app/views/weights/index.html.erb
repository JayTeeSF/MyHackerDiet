<h1>Weights</h1>

<table border="1">
  <tr>
    <td>
      <%= link_to 'New weight', new_weight_path %><% form_for :dump, :url=>{:controller=>"weights", :action=>"csv_import"}, :html => { :multipart => true } do |f| -%>
        <table border="1">
          <tr>
            <th>&nbsp;</th>
            <th>Rec date</th>
            <th>Weight</th>
            <th>Body Fat %</th>
            <th>&nbsp;</th>
          </tr>

          <% @weights.each do |weight| %>
            <tr>
              <td><%= link_to 'X', weight, :confirm => 'Are you sure?', :method => :delete %></td>
              <td><%=h weight.rec_date %></td>
              <td><%=h weight.weight %></td>
              <td><%=h weight.bodyfat %></td>
              <td><%= link_to 'Edit', edit_weight_path(weight) %></td>
            </tr>
          <% end %>
        </table>
        <%= will_paginate(@weights) %>

        <br /><br />

        <table>
          <tr>
            <td>
              <label for="dump_file">
                Select a CSV File :
              </label>
            </td>
            <td >
              <%= f.file_field :file -%>
            </td>
          </tr>
          <tr>
            <td colspan='2'>
              <%= submit_tag 'Submit' -%>
            </td>
          </tr>
        </table>
      <% end -%>
    </td>
    <td width="100%" valign="top">
      <img src="/myWeight.png" />
    </td>
  </tr>
</table>
