<h1>New weight</h1>

<% form_for(@weight) do |f| %>
  <%= f.error_messages %>
  <%= f.hidden_field :person_id, :value => @user.id %>
  <p>
    <%= f.label :rec_date %><br />
    <%= f.date_select :rec_date %>
  </p>
  <p>
    <%= f.label :weight %><br />
    <%= f.text_field :weight %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', weights_path %>
