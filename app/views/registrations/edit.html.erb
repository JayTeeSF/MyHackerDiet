<h2>Edit <%= resource_name.to_s.humanize %></h2>
<% form_for resource_name, resource, :url => registration_path(resource_name), :html => { :method => :put } do |f| -%>
  <%= f.error_messages %>


  <table border="0" width="95%">
    <tr valign="top"><td align="left">
        <fieldset>
          <legend>Login Credentials</legend>
          <table border="0">
            <tr>
              <td><strong><label for="email">*Email Address:</label></strong></td>
              <td><%= f.text_field :email %></td>
            </tr>
            <tr>
              <td><label for="current_password"><strong>*Current Password</strong> <i>(to confirm its you!)</i>:</label></td>
              <td><%= f.password_field :current_password %></td>
            </tr>
            <tr>
              <td>&nbsp;</td>
              <td>&nbsp;</td>
            </tr>
            <tr>
              <td><strong><label for="password">*New Password:</label></strong></td>
              <td><%= f.password_field :password %></td>
            </tr>
            <tr>
              <td><strong><label for="password_confirmation">*Confirm New Password:</label></strong></td>
              <td><%= f.password_field :password_confirmation %></td>
            </tr>
          </table>
        </fieldset>

        <fieldset>
          <legend>General Health</legend>
          <table border="0">
            <tr>
              <td><strong><label for="dob">*Date of Birth:</label></strong></td>
              <td><%= f.date_select :dob, {:start_year => 1920} %>
              </tr>
              <tr>
                <td><strong><label for="sex">*Sex:</label></strong></td>
                <td><%= f.radio_button :sex, "m" %> Male &nbsp;&nbsp;&nbsp;<%= f.radio_button :sex, "f" %> Female</td>
              </tr>
              <tr>
                <td><strong><label for="height">*Height (inches):</label></strong></td>
                <td><%= f.text_field :height %></td>
              </tr>
            </table>
          </fieldset>


        </td>
        <td align="left">
          <fieldset>
            <legend><a href="http://withings.com">Withings</a> Wifi Scale</a></legend>

          <table border="0">
            <tr>
              <td><label for="withings_userid"> Userid</td>
                <td></label> <%= f.text_field :withings_userid %></td>
            </tr>
            <tr>
              <td><label for="withings_publickey">Publickey</label></td>
              <td><%= f.text_field :withings_publickey %></td>
            </tr>
          </table>
        </fieldset>
      </td>
    </tr>
    <tr>
      <td align="center" colspan="2"><%= f.submit "Update" %></td>
    </tr>
  </table>
<% end %>
